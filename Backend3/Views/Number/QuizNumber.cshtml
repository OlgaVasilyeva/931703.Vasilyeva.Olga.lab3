@model Backend3.Models.NumberVievModel
@{
 ViewBag.Title = "Hello Quiz";
}

    <h2>Quiz</h2>

    <form asp-action="QuizNumber" class="form-horizontal">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="NumberCount" />

        @if (Model.Actions != null)
        {
            for (var i = 0; i < Model.Actions.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Actions[i].First" />

            }
        }
        <input type="hidden" asp-for="NumberCountRight" />
        @if (Model.Prov != null)
        {
            for (var i = 0; i < Model.Prov.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Prov[i].Bul" />

            }
        }
        <div class="form-group">
            <label class="col-md-2 control-label"><text> @ViewBag.Name @ViewBag.Opt @ViewBag.Name1</text> = </label>
            <div class="col-md-10">
                <input type="hidden" name="primer" class="form-control" value="@ViewBag.Name @ViewBag.Opt @ViewBag.Name1 = " />
                <input type="hidden" name="fir" class="form-control" value="@ViewBag.Name" />
                <input type="hidden" name="sec" class="form-control" value="@ViewBag.Name1" />
                <input type="hidden" name="opt" class="form-control" value="@ViewBag.Opt" />
                <input type="text" name="otvet" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" name="Action" class="btn btn-default" value="Submit">Submit</button>
                <button type="submit" name="Action" class="btn btn-primary" value="Finish">Finish</button>
            </div>
        </div>
    </form>